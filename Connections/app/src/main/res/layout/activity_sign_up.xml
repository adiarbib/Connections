<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.user.connections.SignUpActivity"
    android:orientation="vertical">

    <ImageButton
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/user"
        android:layout_centerHorizontal="true"
        android:scaleType="fitXY"
        android:background="@drawable/img"
        android:id="@+id/img"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter your e-mail here"
        android:id="@+id/mail"
        android:layout_above="@+id/signup_username_input"
        android:layout_alignParentStart="true"
        android:inputType="textEmailAddress"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter your username here"
        android:id="@+id/signup_username_input"
        android:layout_above="@+id/signup_password_input"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Please enter your password here"
        android:id="@+id/signup_password_input"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:inputType="textPassword"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Birthdate"
        android:id="@+id/birthdate_textView"
        android:layout_above="@+id/birthdate"
        android:layout_alignEnd="@+id/birthdate"
        android:layout_alignTop="@+id/country_textView"
        android:layout_alignParentStart="true"
        android:textSize="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Date"
        android:layout_alignTop="@+id/country"
        android:layout_alignParentStart="true"
        android:id="@+id/birthdate" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Country"
        android:id="@+id/country_textView"
        android:textSize="20dp"
        android:layout_above="@+id/birthdate"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Country"
        android:layout_below="@+id/signup_password_input"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="64dp"
        android:id="@+id/country" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/country_textView" />




</RelativeLayout>
